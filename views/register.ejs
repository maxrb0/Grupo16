<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include ("./partials/head.ejs")%>

</head>

<body>
    <header>

        <%- include ("./partials/header.ejs")%>

    </header>

     <!--El contenido de la pagina seria-->
    <!--Desde acá-->




    <main class="register">
        <h2 class="registerTitle">Regístrate</h2>
        <br>
        <form class="formSignup" action="/" method="POST">
            <label for="info-personal"><b>Información Personal</b></label>
            <br>
            <input type="text" name="name" placeholder="Nombre y apellido">
            <input type="text" name="user" placeholder="Nombre de usuario">
            <input type="email" name="email" placeholder="E-mail">
            <input type="text" name="addres" placeholder="Domicilio">
            <br>
            <label for="birth_date"><b>Fecha de nacimiento</b></label>
            <br>
            <input type="date" name="birth_date" id="birth_date">
        <br>
        <label for="contraseña"><b>Contraseña</b></label>
        <br>
            <input type="password" name="pass" placeholder="Elegí tu contraseña">
                <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña">
                <br>
                <br>
                <input type="submit" value="Enviar">
                <input type="reset" value="Borrar">
                <br>
                <br>
            </form>
            <span class="forgotPass">
                <a href="/login" title="login" id="link-login">Ya tenés una cuenta? Ingresá aquí</a>
              </span>
              <br>
              <br>
        </main>



    <!--Hasta acá acá-->
    <!--Lo otro es header y footer-->
    
    <footer class="footer"> 
        
        <%- include ("./partials/footer.ejs")%>

    </footer>
    
</body>
</html>