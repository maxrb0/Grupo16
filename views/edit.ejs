<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")%>
</head>
<body>
    <header>
        <%- include ("./partials/header.ejs")%>
    </header>
    <main class="register">

        <div class="fondo">

        <h2 class="titulosForm">Edita tu producto</h2>
        
        <form class="formSignup" action="/edit/<%=pToEdit.product_id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
            <label class="titulosForm" for="info-personal"><b>Informaci√≥n Del Producto</b></label>

      
            <label class="titulosForm" for="category" >Liga Del equipo:</label>   
            <select name="category" id="category" class="textos">
                <% for(let i=0; i< categorias.length; i++) { %>
                    <option <% if (pToEdit.category_id==categorias[i].category_id){ %> selected
                        <%} %>
                            value="<%= categorias[i].category_id %>">
                                <%= categorias[i].category_name %>
                    </option>
                    <% } %>
            </select>
      
 
            <label class="titulosForm" for="name" >Nombre Camiseta:</label>
            <input class="textos" type="text" id="name" name="nameCamiseta" value="<%=pToEdit.product_name%>">
           
            <label class="titulosForm" for="name" >Caracteristicas:</label>
            <input class="textos" type="text" id="description" name="descriptonCamiseta" value="<%=pToEdit.product_description%>">

            <label class="titulosForm" for="name" >Precio:</label>
            <input class="textos" type="number" id="price" name="priceCamiseta" value="<%=pToEdit.product_price%>">

            
            <label class="titulosForm" for="imgFrente">Imagen camiseta de frente:</label>
            <input class="textos" type="file" id="imgFrente" name="product_image_front">


            <label class="titulosForm" for="imgBack" >Imagen camiseta espalda:</label>
            <input class="textos" type="file" id="imgBack" name="product_image_back">

   
                <input class="botones" type="submit" value="Guardar">
                
            </form>
            </div>
    
        </main>

<footer class="footer">
    <%- include ("./partials/footer.ejs")%>
</footer>

</body>
</html>