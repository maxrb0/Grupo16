    <div class="fondo">

        <h2 class="titulosForm">Crea tu producto</h2>

        <div class="errors">
            <ul></ul>
        </div>
        
        <form class="formSignup" action="/indexRouter/crea" method="POST" enctype="multipart/form-data">
            <label class="titulosForm" for="info-personal"><b>Informac0ión Del Producto</b></label>

      
            <label class="titulosForm" for="category" >Liga Del equipo:</label>   

