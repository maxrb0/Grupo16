            <select name="category" id="category" class="textos" placeholder="Seleccionar Liga">
                <option value="none">---</option>
                <% for(let i=0; i< categorias.length; i++) { %>
                    <option value="<%= categorias[i].category_id %>">
                        <%= categorias[i].category_name %>
                    </option>
                    <% } %>
            </select>
            


           
            <label class="titulosForm" for="name" >Nombre Camiseta:</label>
            <input class="textos" type="text" id="name" name="nameCamiseta" placeholder=" Nombre">
           
            <label class="titulosForm" for="caracteristicas" >Caracteristicas:</label>
            <input class="textos" type="text" id="caracteristica" name="descriptonCamiseta" placeholder="Caracteristicas">

            <label class="titulosForm" for="name" >Precio:</label>
            <input class="textos" type="number" id="name" name="priceCamiseta" placeholder="Precio">

            
            <label class="titulosForm" for="imgFrente">Imagen camiseta de frente:</label>
            <input class="textos" type="file" id="imgFrente" name="imagefrente" accept=".jpg,.png,.jpeg,.gif" multiple>


            <label class="titulosForm" for="imgBack" >Imagen camiseta espalda:</label>
            <input class="textos" type="file" id="imgBack" name="imageback" accept=".jpg,.png,.jpeg,.gif" multiple>

            <button class="botones" type="submit">Guardar</button>

        </form>

    </div>
    
        </main>

